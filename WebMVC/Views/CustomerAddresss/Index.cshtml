
@model IEnumerable<Domain.Entities.CustomerAddress>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.AddressId)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.StatusId)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Address)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Customer)
            </th>
            <td>
                <a asp-action="Edit" asp-route-CustomerId="@item.CustomerId" asp-route-AddressId="@item.AddressId">Edit</a> |
                <a asp-action="Details" asp-route-CustomerId="@item.CustomerId" asp-route-AddressId="@item.AddressId">Details</a> |
                <a asp-action="Delete" asp-route-CustomerId="@item.CustomerId" asp-route-AddressId="@item.AddressId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
